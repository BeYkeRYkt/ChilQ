<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/card_view_title"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/card_view_image"
            android:layout_marginEnd="20dp"
            android:layout_toRightOf="@id/card_view_image"
            android:fontFamily="@font/roboto"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/card_view_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/card_view_image"
            android:layout_alignStart="@+id/card_view_title"
            android:layout_below="@id/card_view_title"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/card_view_image"
            android:fontFamily="@font/roboto"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/card_view_reward"
            android:layout_width="120dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@+id/card_view_image"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignStart="@+id/card_view_image"
            android:layout_below="@id/card_view_image"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:textSize="15dp"/>

        <ImageView
            android:id="@+id/card_view_image"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_gravity="left"
            android:layout_margin="10dp"/>

        <ImageButton
            android:id="@+id/card_view_button_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/card_view_description"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@+id/card_view_button_remove"
            android:background="@drawable/ic_icon_edit"
            android:cropToPadding="true"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/card_view_button_remove"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/card_view_description"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:src="@drawable/ic_icon_delete"
            />

        <!-- <TextView
            android:id="@+id/card_view_description"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:fontFamily="@font/roboto"
            android:textSize="20dp"
            tools:background="@color/colorPrimaryDark" /> -->
    </RelativeLayout>
</android.support.v7.widget.CardView>